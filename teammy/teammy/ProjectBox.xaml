<UserControl x:Class="teammy.ProjectBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:teammy"
             mc:Ignorable="d" x:Name="root" Width="111.778" Height="111.111">
    <Grid Margin="0,0,-4,-2.667">
        <Rectangle x:Name="rectProj" Fill="White" HorizontalAlignment="Left" Height="108" Stroke="#FF1E1922" VerticalAlignment="Top" Width="108" Margin="2,1,0,0"/>

        <Image x:Name="imgProjProfile" HorizontalAlignment="Left" Height="79" Margin="17,10,0,0" VerticalAlignment="Top" Width="77" Source="{Binding ElementName=root, Path=ProjectImage}" SourceUpdated="imgProjProfile_SourceUpdated" />

        <TextBox x:Name="txtProjName" Text="{Binding ElementName=root, Path=ProjectName}" HorizontalAlignment="Left" Margin="7,85,0,0" VerticalAlignment="Top" Width="102" FontFamily="Georgia" Foreground="#FF0A98F7" BorderBrush="{x:Null}" TextChanged="txtProjName_TextChanged" IsReadOnly="True"/>

    </Grid>
</UserControl>

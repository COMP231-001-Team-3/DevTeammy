        <Button x:Name="btnPrevious" HorizontalAlignment="Left" Margin="289,59,0,0" VerticalAlignment="Top" Width="89" Height="29" Background="White" FontSize="20" BorderBrush="{x:Null}" MouseEnter="btnPrevious_MouseEnter" MouseLeave="btnPrevious_MouseLeave" Padding="0">
            <Button.Content>
                <DockPanel>
                    <Grid DockPanel.Dock="Left">
                        <Image x:Name="prevImg" Source="images/arrow.png"  Width="20" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="180"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                        <Button x:Name="prevbtnIcon" Style="{StaticResource mouseOverStyle}" Background="Transparent" BorderThickness="0" Width="{Binding ActualWidth, Source={x:Reference Name=prevImg}}" Height="{Binding ActualHeight, Source={x:Reference Name=prevImg}}"/>
                    </Grid>
                    <Label Content="Previous"  Foreground="#FF8671CE" DockPanel.Dock="Right" FontSize="14" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="0" Margin="3,0,0,0"/>
                </DockPanel>
            </Button.Content>
        </Button>
        <Button x:Name="btnNext" HorizontalAlignment="Left" Margin="884,64,0,0" VerticalAlignment="Top" Width="58" Height="24" Background="White" FontSize="20" BorderBrush="{x:Null}" MouseEnter="btnNext_MouseEnter" MouseLeave="btnNext_MouseLeave">
